@model KutuphaneUygulamasi.Models.Book

@{
    ViewData["Title"] = "Kitap Ekle";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Kütüphane</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site1.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>Kitap Ekle</h1>
        <form asp-action="AddBook" asp-controller="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title">Başlık</label>
                <input type="text" class="form-control" id="Title" name="Title" required />
            </div>
            <div class="form-group">
                <label for="Author">Yazar</label>
                <input type="text" class="form-control" id="Author" name="Author" required />
            </div>
            <div class="form-group">
                <label for="Description">Açıklama</label>
                <textarea class="form-control" id="Description" name="Description" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <label for="PdfFile">PDF Dosyası</label>
                <input type="file" class="form-control-file" id="PdfFile" name="pdfFile" accept=".pdf" required />
            </div>
            <button type="submit" class="btn btn-primary">Kitap Ekle</button>
        </form>
    </div>
</body>
</html>
