<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Admin Paneline Hoşgeldiniz</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="#" data-toggle="modal" data-target="#addBookModal">Kitap Ekle</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#listBooksModal">Kitap Listesi</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#listMembersModal">Üye Listesi</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#addMemberModal">Üye Ekle</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#setMemberRoleModal">Üye Rolü Belirle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Logout">Çıkış Yap</a>
                </li>
            </ul>
        </nav>

        <div id="content">
            <h2 id="pageTitle">Admin Panel</h2>
            <div class="line"></div>
        </div>
    </div>

    <!-- Modals -->
    <!-- Add Book Modal -->
    <div class="modal fade" id="addBookModal" tabindex="-1" role="dialog" aria-labelledby="addBookModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBookModalLabel">Kitap Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <iframe id="addBookFrame" src="/Admin/AddBook" width="100%" height="800px" style="border:none;"></iframe>
                </div>
            </div>
        </div>
    </div>



    <!-- List Books Modal -->
    <div class="modal fade" id="listBooksModal" tabindex="-1" role="dialog" aria-labelledby="listBooksModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="listBooksModalLabel">Kitap Listesi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <iframe id="listBooksFrame" src="/Admin/ListBooks" style="width: 100%; height: 600px; border: none;"></iframe>
                </div>
            </div>
        </div>
    </div>


    <!-- List Members Modal -->
    <div class="modal fade" id="listMembersModal" tabindex="-1" role="dialog" aria-labelledby="listMembersModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <!-- modal-lg sınıfını ekleyin -->
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="listMembersModalLabel">Üye Listesi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                                <th scope="col">Soyad</th>
                                <th scope="col">Email</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Üye listesi burada dinamik olarak yüklenecek -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <!-- Edit Member Button -->
    <button type="button" class="edit-btn btn btn-primary" data-id="1">Düzenle</button>

    <!-- Edit Member Modal -->
    <div class="modal fade" id="editMemberModal" tabindex="-1" role="dialog" aria-labelledby="editMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editMemberModalLabel">Üye Düzenle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editMemberForm">
                        <input type="hidden" id="editMemberId" name="Id" />
                        <div class="form-group">
                            <label for="editEmail">E-posta</label>
                            <input type="email" class="form-control" id="editEmail" name="Email" required />
                        </div>
                        <div class="form-group">
                            <label for="editFirstName">Ad</label>
                            <input type="text" class="form-control" id="editFirstName" name="FirstName" required />
                        </div>
                        <div class="form-group">
                            <label for="editLastName">Soyad</label>
                            <input type="text" class="form-control" id="editLastName" name="LastName" required />
                        </div>
                        <div class="form-group">
                            <label for="editAddress">Adres</label>
                            <input type="text" class="form-control" id="editAddress" name="Address" />
                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Delete Member Modal -->
    <div class="modal fade" id="deleteMemberModal" tabindex="-1" role="dialog" aria-labelledby="deleteMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteMemberModalLabel">Üye Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bu üye silinecek, emin misiniz?</p>
                    <input type="hidden" id="deleteMemberId" />
                    <button id="confirmDelete" class="btn btn-danger">Evet, sil</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Silme İşlemi Başarıyla Tamamlandı Modali -->
    <div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationModalLabel">Başarılı</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <div class="alert alert-success" role="alert">
                        <i class="fa fa-check-circle" style="font-size: 48px; color: green;"></i>
                        <p>Üye başarıyla silindi!</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Tamam</button>
                </div>
            </div>
        </div>
    </div>
    

    <!-- Add Member Modal -->
    <div class="modal fade" id="addMemberModal" tabindex="-1" role="dialog" aria-labelledby="addMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMemberModalLabel">Üye Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addMemberForm">
                        <div class="form-group">
                            <label for="Email">E-posta</label>
                            <input type="email" class="form-control" id="Email" name="Email" required>
                        </div>
                        <div class="form-group">
                            <label for="FirstName">Ad</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" required>
                        </div>
                        <div class="form-group">
                            <label for="LastName">Soyad</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" required>
                        </div>
                        <div class="form-group">
                            <label for="Address">Adres</label>
                            <input type="text" class="form-control" id="Address" name="Address" required>
                        </div>
                        <div class="form-group">
                            <label for="Password">Şifre</label>
                            <input type="password" class="form-control" id="Password" name="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword">Şifreyi Onayla</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                    <div id="memberAddedMessage" class="alert alert-success" style="display:none;">
                        Üye başarıyla eklendi!
                    </div>
                    <div id="memberAddedErrorMessage" class="alert alert-danger" style="display:none;">
                        Üye eklenirken bir hata oluştu.
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Set Member Role Modal -->
    <div class="modal fade" id="setMemberRoleModal" tabindex="-1" role="dialog" aria-labelledby="setMemberRoleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="setMemberRoleModalLabel">Üye Rolü Belirle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form onsubmit="submitRoleForm(); return false;">
                        <div class="form-group">
                            <label for="UserId">Üye ID</label>
                            <input type="text" class="form-control" id="UserId" placeholder="Üye ID">
                        </div>
                        <div class="form-group">
                            <label for="Role">Rol</label>
                            <input type="text" class="form-control" id="Role" placeholder="Rol">
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add Book Form Submission
            $("#addBookForm").submit(function (event) {
                event.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: '/Create/AddBook',
                    data: new FormData(this),
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        $("#bookAddedMessage").show();
                        setTimeout(function () { $("#addBookModal").modal('hide'); }, 2000);
                    },
                    error: function () {
                        $("#bookAddedErrorMessage").show();
                    }
                });
            });

            // Load Book List
            $("#listBooksModal").on('shown.bs.modal', function () {
                $.ajax({
                    type: 'GET',
                    url: '/Create/ListBooks',
                    success: function (data) {
                        $("#booksTableBody").html(data);
                    }
                });
            });

            // Load Member List
            function loadMembersList(callback) {
                $("#listMembersModal").on('shown.bs.modal', function () {
                    $.ajax({
                        type: 'GET',
                        url: '/Admin/ListMembers',
                        success: function (data) {
                            var tbody = $("#listMembersModal tbody");
                            tbody.empty();
                            $.each(data, function (index, user) {
                                tbody.append(`
                                        <tr>
                                            <td>${index + 1}</td>
                                            <td>${user.firstName}</td>
                                            <td>${user.lastName}</td>
                                            <td>${user.email}</td>
                                            <td>
                                                <button class="btn btn-warning btn-sm edit-btn" data-id="${user.id}">Düzenle</button>
                                                <button class="btn btn-danger btn-sm delete-btn" data-id="${user.id}">Sil</button>
                                            </td>
                                        </tr>
                                    `);
                            });
                            if (typeof callback === 'function') {
                                callback();
                            }
                        },
                        error: function () {
                            alert('Üye listesi yüklenirken bir hata oluştu.');
                        }
                    });
                });
            }
            loadMembersList(); // Ensure the member list is loaded when needed

            // Edit Member
            $(document).on('click', '.edit-btn', function () {
                var userId = $(this).data('id');

                // Üye listesi modalını kapat
                $('#listMembersModal').modal('hide');

                $.ajax({
                    type: 'GET',
                    url: '/Admin/GetMember/' + userId,
                    success: function (data) {
                        console.log(data); // Verilenin doğru şekilde geldiğinden emin olalım
                        if (data) {
                            $('#editMemberId').val(data.id);
                            $('#editEmail').val(data.email);
                            $('#editFirstName').val(data.firstName);
                            $('#editLastName').val(data.lastName);
                            $('#editAddress').val(data.address);
                            $('#editMemberModal').modal('show');
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Hata',
                            text: 'Üye bilgileri yüklenirken bir hata oluştu.',
                            icon: 'error'
                        });
                    }
                });
            });

            // Form submit event for editing member
            $('#editMemberForm').on('submit', function (event) {
                event.preventDefault();

                var formData = {
                    Id: $('#editMemberId').val(),
                    Email: $('#editEmail').val(),
                    FirstName: $('#editFirstName').val(),
                    LastName: $('#editLastName').val(),
                    Address: $('#editAddress').val()
                };

                $.ajax({
                    url: '/Admin/EditMember',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response.success) {
                            $('#editMemberModal').modal('hide');
                            Swal.fire({
                                title: 'Başarılı',
                                text: 'Üye başarıyla güncellendi!',
                                icon: 'success'
                            }).then(function () {
                                $('#listMembersModal').modal('show'); // Üye listesi modalını tekrar aç
                                loadMembersList(); // Güncellenmiş listeyi yükle
                            });
                        } else {
                            Swal.fire({
                                title: 'Başarısız',
                                text: 'Güncelleme başarısız: ' + response.errors,
                                icon: 'error'
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            title: 'Hata',
                            text: 'Bir hata oluştu: ' + error,
                            icon: 'error'
                        });
                    }
                });
            });





            // Delete Member
            $(document).on('click', '.delete-btn', function () {
                var userId = $(this).data('id');
                $('#deleteMemberId').val(userId);
                $('#deleteMemberModal').modal('show');
            });

            $('#confirmDelete').click(function () {
                var userId = $('#deleteMemberId').val();

                Swal.fire({
                    title: 'Üye Silinsin mi?',
                    text: 'Bu üye silinecek, emin misiniz?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/DeleteMember/' + userId,
                            type: 'DELETE',
                            success: function (response) {
                                if (response.success) {
                                    $('#deleteMemberModal').modal('hide'); // Silme modalını kapat

                                    Swal.fire({
                                        title: 'Başarılı!',
                                        text: 'Üye başarıyla silindi!',
                                        icon: 'success',
                                        timer: 2000, // 2 saniye sonra kapanacak
                                        timerProgressBar: true,
                                        didClose: () => {
                                            // Üye listesi modalını kapat ve ana sayfaya yönlendir
                                            $('#listMembersModal').modal('hide'); // Üye listesi modalını kapat

                                            // 0.5 saniye bekle ve sonra ana sayfaya yönlendir
                                            setTimeout(function () {
                                                window.location.href = '/Admin/Index'; // Ana sayfaya yönlendir
                                            }, 500); // 0.5 saniye bekle
                                        }
                                    });
                                } else {
                                    Swal.fire(
                                        'Hata!',
                                        'Üye silinirken bir hata oluştu.',
                                        'error'
                                    );
                                }
                            },
                            error: function () {
                                Swal.fire(
                                    'Hata!',
                                    'Bir hata oluştu.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });





            // Add Member Form Submission
            $('#addMemberForm').submit(function (event) {
                event.preventDefault();

                var formData = {
                    Email: $('#Email').val(),
                    FirstName: $('#FirstName').val(),
                    LastName: $('#LastName').val(),
                    Address: $('#Address').val(),
                    Password: $('#Password').val(),
                    ConfirmPassword: $('#ConfirmPassword').val()
                };

                $.ajax({
                    url: '/Admin/AddMember',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response.success) {
                            $('#memberAddedMessage').show();
                            setTimeout(function () {
                                $('#memberAddedMessage').hide();
                                $('#addMemberModal').modal('hide');
                                $('#addMemberForm')[0].reset();
                            }, 2000);
                        } else {
                            $('#memberAddedErrorMessage').text(response.errors.join(', ')).show();
                            setTimeout(function () {
                                $('#memberAddedErrorMessage').hide();
                            }, 4000);
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#memberAddedErrorMessage').text('Bir hata oluştu: ' + xhr.responseText).show();
                        setTimeout(function () {
                            $('#memberAddedErrorMessage').hide();
                        }, 4000);
                    }
                });
            });

            // Clear modal backdrop and padding on modal hide
            $('#addMemberModal').on('hidden.bs.modal', function () {
                $('.modal-backdrop').remove();
                $('body').removeClass('modal-open');
                $('body').css('padding-right', '');
            });
        });

        function submitRoleForm() {
            var userId = $('#UserId').val();
            var role = $('#Role').val();

            $.ajax({
                url: '/Admin/SetMemberRole',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ UserId: userId, Role: role }),
                success: function (response) {
                    if (response.success) {
                        alert('Rol başarıyla atandı.');
                        $('#setMemberRoleModal').modal('hide');
                    } else {
                        alert('Rol atanırken bir hata oluştu.');
                    }
                },
                error: function (xhr, status, error) {
                    alert('Bir hata oluştu: ' + xhr.responseText);
                }
            });
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

</body>
</html>