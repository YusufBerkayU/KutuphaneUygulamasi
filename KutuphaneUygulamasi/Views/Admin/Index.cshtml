<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Admin Paneline Hoşgeldiniz</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="#" data-toggle="modal" data-target="#addBookModal">Kitap Ekle</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#listBooksModal">Kitap Listesi</a>
                </li>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#listMembersModal">Üye Listesi</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#addMemberModal">Üye Ekle</a>
                </li>
                <li>
                    <a href="#" data-toggle="modal" data-target="#setMemberRoleModal">Üye Rolü Belirle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Logout">Çıkış Yap</a>
                </li>
            </ul>
        </nav>

        <div id="content">
            <h2 id="pageTitle">Admin Panel</h2>
            <div class="line"></div>
        </div>
    </div>

<

    <!-- Modals -->
    <!-- Add Book Modal -->
    <div class="modal fade" id="addBookModal" tabindex="-1" role="dialog" aria-labelledby="addBookModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBookModalLabel">Kitap Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <iframe id="addBookFrame" src="@Url.Action("AddBook", "Admin")" width="100%" height="400px" style="border:none;"></iframe>
                </div>
            </div>
        </div>
    </div>

    <!-- List Books Modal -->
    <div class="modal fade" id="listBooksModal" tabindex="-1" role="dialog" aria-labelledby="listBooksModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="listBooksModalLabel">Kitap Listesi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <iframe id="listBooksFrame" src="@Url.Action("ListBooks", "Admin")" width="100%" height="400px" style="border:none;"></iframe>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="listMembersModal" tabindex="-1" role="dialog" aria-labelledby="listMembersModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="listMembersModalLabel">Üye Listesi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                                <th scope="col">Soyad</th>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Üye listesi burada dinamik olarak yüklenecek -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addMemberModal" tabindex="-1" role="dialog" aria-labelledby="addMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMemberModalLabel">Üye Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addMemberForm">
                        <div class="form-group">
                            <label for="Email">E-posta</label>
                            <input type="email" class="form-control" id="Email" name="Email" required>
                        </div>
                        <div class="form-group">
                            <label for="FirstName">Ad</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" required>
                        </div>
                        <div class="form-group">
                            <label for="LastName">Soyad</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" required>
                        </div>
                        <div class="form-group">
                            <label for="Address">Adres</label>
                            <input type="text" class="form-control" id="Address" name="Address" required>
                        </div>
                        <div class="form-group">
                            <label for="Password">Şifre</label>
                            <input type="password" class="form-control" id="Password" name="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword">Şifreyi Onayla</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                    <div id="memberAddedMessage" class="alert alert-success" style="display:none;">
                        Üye başarıyla eklendi!
                    </div>
                    <div id="memberAddedErrorMessage" class="alert alert-danger" style="display:none;">
                        Üye eklenirken bir hata oluþtu.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="setMemberRoleModal" tabindex="-1" role="dialog" aria-labelledby="setMemberRoleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="setMemberRoleModalLabel">Üye Rolü Belirle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form onsubmit="submitRoleForm(); return false;">
                        <div class="form-group">
                            <label for="UserId">Üye ID</label>
                            <input type="text" class="form-control" id="UserId" placeholder="Üye ID">
                        </div>
                        <div class="form-group">
                            <label for="Role">Rol</label>
                            <input type="text" class="form-control" id="Role" placeholder="Rol">
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
         (function () {
              Kitap ekleme formunu yönet
             $("#addBookForm").submit(function (event) {
                 event.preventDefault();
                 $.ajax({
                     type: 'POST',
                     url: '/Create/AddBook', // Bu URL'yi CreateController'da ki AddBook eylemine yönlendirin
                     data: new FormData(this),
                     contentType: false,
                     processData: false,
                     success: function (response) {
                         $("#bookAddedMessage").show();
                         setTimeout(function () { $("#addBookModal").modal('hide'); }, 2000);
                     },
                     error: function () {
                         $("#bookAddedErrorMessage").show();
                     }
                 });
             });

             // Kitap listesi yükleme
             $("#listBooksModal").on('shown.bs.modal', function () {
                 $.ajax({
                     type: 'GET',
                     url: '/Create/ListBooks', // Bu URL'yi CreateController'daki ListBooks eylemine yönlendirin
                     success: function (data) {
                         $("#booksTableBody").html(data);
                     }

                        (function () {
                         // Üye listesi yükleme
                         $("#listMembersModal").on('shown.bs.modal', function () {
                             $.ajax({
                                 type: 'GET',
                                 url: '@Url.Action("ListMembers", "Admin")',
                                 success: function (data) {
                                     var tbody = $("#listMembersModal tbody");
                                     tbody.empty(); // Eski içerikleri temizle
                                     $.each(data, function (index, user) {
                                         tbody.append(`
                                     <tr>
                                         <td>${index + 1}</td>
                                         <td>${user.firstName}</td>
                                         <td>${user.lastName}</td>
                                         <td>${user.email}</td>
                                    </tr>
                                 `);
                                     });
                                 },
                                 error: function () {
                                     alert('Üye listesi yüklenirken bir hata oluştu.');
                                 }
                             });
                         });
                     });









        $(document).ready(function () {
            $('#addMemberForm').submit(function (event) {
                debugger;
                event.preventDefault();

                var formData = {
                    Email: $('#Email').val(),
                    FirstName: $('#FirstName').val(),
                    LastName: $('#LastName').val(),
                    Address: $('#Address').val(),
                    Password: $('#Password').val(),
                    ConfirmPassword: $('#ConfirmPassword').val()
                };

                $.ajax({
                    url: '@Url.Action("AddMember", "Admin")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response.success) {
                            $('#memberAddedMessage').show();
                            setTimeout(function () {
                                $('#memberAddedMessage').hide();
                                $('#addMemberModal').modal('hide');
                                $('#addMemberForm')[0].reset();
                            }, 2000);
                        } else {
                            $('#memberAddedErrorMessage').text(response.errors.join(', ')).show();
                            setTimeout(function () {
                                $('#memberAddedErrorMessage').hide();
                            }, 4000);
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#memberAddedErrorMessage').text('Bir hata oluştu: ' + xhr.responseText).show();
                        setTimeout(function () {
                            $('#memberAddedErrorMessage').hide();
                        }, 4000);
                    }
                });
            });

            // Modal kapandıktan sonra arka planı temizle
            $('#addMemberModal').on('hidden.bs.modal', function () {
                $('.modal-backdrop').remove();
                $('body').removeClass('modal-open');
                $('body').css('padding-right', '');
            });

        });

        function submitRoleForm() {
            var userId = $('#UserId').val();
            var role = $('#Role').val();

            $.ajax({
                url: '@Url.Action("SetMemberRole", "Admin")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ UserId: userId, Role: role }),
                success: function (response) {
                    if (response.success) {
                        alert('Rol başarıyla atandı.');
                        $('#setMemberRoleModal').modal('hide');
                    } else {
                        alert('Rol atanırken bir hata oluştu.');
                    }
                },
                error: function (xhr, status, error) {
                    alert('Bir hata oluştu: ' + xhr.responseText);
                }
            });
        }
    </script>
</body>
</html>