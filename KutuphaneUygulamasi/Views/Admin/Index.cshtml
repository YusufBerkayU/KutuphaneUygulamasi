<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Admin Paneline Hoþgeldiniz</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="#" id="addBook">Kitap Ekle</a>
                </li>
                <li>
                    <a href="#" id="listBooks">Kitap Listesi</a>
                </li>
                <li>
                    <a href="#" id="listMembers">Üye Listesi</a>
                </li>
                <li>
                    <a href="#" id="addMember">Üye Ekle</a>
                </li>
                <li>
                    <a href="#" id="setMemberRole">Üye Rolü Belirle</a>
                </li>
            </ul>
        </nav>

        <div id="content">
            <h2 id="pageTitle">Admin Panel</h2>
            <div class="line"></div>
            <div id="mainContent">
                <!-- AJAX içeriði burada yüklenecek -->
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#addBook").click(function () {
                loadContent('@Url.Action("AddBookContent", "Admin")');
            });
            $("#listBooks").click(function () {
                loadContent('@Url.Action("ListBooksContent", "Admin")');
            });
            $("#listMembers").click(function () {
                loadContent('@Url.Action("ListMembersContent", "Admin")');
            });
            $("#addMember").click(function () {
                loadContent('@Url.Action("AddMemberContent", "Admin")');
            });
            $("#setMemberRole").click(function () {
                loadContent('@Url.Action("SetMemberRoleContent", "Admin")');
            });

            function loadContent(url) {
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function (data) {
                        $('#mainContent').html(data);
                    }
                });
            }
        });
    </script>
</body>
</html>
